<div class="row col-sm-12 text-center">
  <h1>Wild Watch - Portland, Oregon Wildlife Tracker</h1>
</div>

<div class="box">
  <table id="table" class="table">
    <thead>
      <tr>
        <th>Common name</th>
        <th>Latin name</th>
        <th>Location</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  </div>

  <tbody id="animal_list">
    <% @animals.each do |animal| %>
    <tr>
      <td><%= animal.common_name %></td>
      <td><%= animal.latin_name %></td>
      <td><%= animal.location %></td>
      <td><%= link_to 'Show', animal %></td>
      <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
      <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="row col-sm-12 text-center">
  <button type="button"><%= link_to 'New Animal', new_animal_path %></button>
</div>

<hr>

<div class="row col-sm-12 text-center">
  <button type="button"><a href="http://localhost:3000/sightings">Register Animal Sighting</a></button>
</div>

<hr>

<div class="row col-sm-12 text-center">
<p>
  <input type="text" name="animal[common_name]" placeholder="Name" id="animal_common_name"/>
  <input type="text" name="animal[latin_name]" placeholder="Latin Name"id="animal_latin_name"/>
  <input type="text" name="animal[location]" placeholder="Location" id="animal_location"/>
  <input type="hidden" name="animal[animal_id]" id="animal_id" value="<%=@animal.id%>"/>
  <button id="add_new_animal_button">Add New Animal</button>
</p>
</div>

<hr>

